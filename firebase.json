{
  "hosting": {
    "public": "apps/frontend/dist",
    "ignore": [
      "firebase.json",
      ".firebaserc",
      "**/.*",
      "**/node_modules/**",
      "**/firebase-debug.log",
      "**/firebase-debug.*.log"
    ],
    "rewrites": [
      {
        "source": "/api{,/**}",
        "run": {
          "serviceId": "wordpack-backend",
          "region": "asia-northeast1"
        }
      },
      {
        "source": "/**",
        "destination": "/index.html"
      }
    ]
  }
}
